@{
}

@{
    var memberId = ViewData["MemberId"];
}

<div class="alert alert-danger" role="alert">
    <p>Are you sure you want to delete Member ID @memberId?</p>
    <div class="row">
        <a class="btn btn-light" asp-controller="Member" asp-action="Index">Cancel</a>
        <form method="post" asp-controller="Member" asp-action="Delete" asp-route-id="@memberId">
            <button type="submit" class="btn btn-dark">Delete</button>
        </form>
    </div>
</div>