@{
}

@model IEnumerable<ProjectListData.Models.Member>

<body>
    <h1>Existing Members</h1>
    @if (Model.Any())
    {
        <table class="table table-striped belowTitle">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.First_name) @Html.DisplayFor(modelItem => item.Last_name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        <form method="post" asp-controller="Member" asp-action="Edit" asp-route-id="@item.Id">
                            <button type="submit" class="btn btn-primary">Edit</button>
                        </form>
                    </td>
                    <td>
                        <form method="post" asp-controller="Member" asp-action="ConfirmDelete" asp-route-id="@item.Id">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="belowTitle">Navigate to the "Create Member" tab to list your first Member!</p>
    }

</body>
