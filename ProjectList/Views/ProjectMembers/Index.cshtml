@{
}

@model IEnumerable<ProjectListData.Models.ReadableProjectMember>

<body>
    <h1>Project Members</h1>
    @if (Model.Any())
    {
        <table class="table table-striped belowTitle">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Project</th>
                    <th scope="col">Member</th>
                    <th scope="col">Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Project_name)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Member_firstname)
                        @Html.DisplayFor(modelItem => item.Member_lastname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Member_email)
                    </td>
                    <td>
                        <form method="post" asp-controller="ProjectMembers" asp-action="ConfirmDelete" asp-route-id="@item.Id">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="belowTitle">Please create at least one Project and Member to use this function...</p>
    }

</body>
