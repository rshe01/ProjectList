@{
}

@{ 
    var richard = ViewData["Richard"] as ProjectListData.Models.Team;
    var temp = ViewData["temp"] as ProjectListData.Models.Team;
    var temp2 = ViewData["temp2"] as ProjectListData.Models.Team;
}
<body class="team">
    <h1 class="title text-center" style="color:white"><span style="color:indianred">Meet</span> the Team.</h1>
    <div class="container">
        <div class="box">
            <div class="teamCard text-center card">
                <img class="img-box card-img-top" src="~/img/profile.jpeg" />
                <h2>@richard.Name</h2>
                <h3>@richard.Position</h3>
                <p>@richard.Description</p>
            </div>
            <section class="teamCard text-center card">
                <img class="img-box" src="~/img/profile.jpeg" />
                <h2>@temp.Name</h2>
                <h3>@temp.Position</h3>
                <p>@temp.Description</p>
            </section>
            <section class="teamCard text-center card">
                <img class="img-box" src="~/img/profile.jpeg" />
                <h2>@temp2.Name</h2>
                <h3>@temp2.Position</h3>
                <p>@temp2.Description</p>
            </section>
            <div class="wave wave1"></div>
            <div class="wave wave2"></div>
            <div class="wave wave3"></div>
        </div>
    </div>
</body>
