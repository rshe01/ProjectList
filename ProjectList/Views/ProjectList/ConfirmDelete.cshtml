@{
}

@{
    var projectId = ViewData["ProjectId"];
}

<div class="alert alert-danger" role="alert">
    <p>Are you sure you want to delete Project ID @projectId?</p>
    <div class="row">
        <a class="btn btn-light" asp-action="GetProjectList">Cancel</a>
        <form method="post" asp-controller="ProjectList" asp-action="Delete" asp-route-id="@projectId">
            <button type="submit" class="btn btn-dark">Delete</button>
        </form>
    </div>
    

</div>